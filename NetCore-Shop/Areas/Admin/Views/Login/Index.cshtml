
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/admin-side/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/admin-side/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Đăng Nhập Hệ Thống Admin</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <link href="~/admin-side/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/admin-side/css/material-dashboard.css?v=1.2.1" rel="stylesheet" />
    <link href="~/admin-side/css/demo.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/admin-side/css/notify-metro.css" rel="stylesheet" />
    <style>
        #txtUsername-error, #txtPassword-error {
            color: #f44336 !important;
        }
    </style>
</head>
<body class="off-canvas-sidebar">
    <div class="wrapper wrapper-full-page">
        <div class="full-page login-page" filter-color="black" data-image="./../../admin-side/img/login.jpeg">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            <form id="frmLogin">
                                @Html.AntiForgeryToken()
                                <div class="card card-login card-hidden">
                                    <div class="card-header text-center" data-background-color="rose">
                                        <h4 class="card-title">Đăng Nhập</h4>
                                        <div class="social-line">
                                            <a href="#btn" class="btn btn-just-icon btn-simple">
                                                <i class="fa fa-facebook-square"></i>
                                            </a>
                                            <a href="#pablo" class="btn btn-just-icon btn-simple">
                                                <i class="fa fa-twitter"></i>
                                            </a>
                                            <a href="#eugen" class="btn btn-just-icon btn-simple">
                                                <i class="fa fa-google-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="card-content">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">face</i>
                                            </span>
                                            <div class="form-group label-floating">
                                                <label class="control-label">Tên đăng nhập</label>
                                                <input type="text" class="form-control" id="txtUsername" name="txtUsername">
                                            </div>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <div class="form-group label-floating">
                                                <label class="control-label">Mật khẩu</label>
                                                <input type="password" class="form-control" id="txtPassword" name="txtPassword">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" class="btn btn-rose btn-simple btn-wd btn-lg" id="btnLogin">Đăng Nhập</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/admin-side/js/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="~/admin-side/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/admin-side/js/material.min.js" type="text/javascript"></script>
    <script src="~/admin-side/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
    <script src="~/admin-side/js/arrive.min.js" type="text/javascript"></script>
    <script src="~/admin-side/js/jquery.validate.min.js"></script>
    <script src="~/admin-side/js/moment.min.js"></script>
    <script src="~/admin-side/js/chartist.min.js"></script>
    <script src="~/admin-side/js/jquery.bootstrap-wizard.js"></script>
    <script src="~/admin-side/js/bootstrap-notify.js"></script>
    <script src="~/admin-side/js/bootstrap-datetimepicker.js"></script>
    <script src="~/admin-side/js/jquery-jvectormap.js"></script>
    <script src="~/admin-side/js/nouislider.min.js"></script>
    <script src="~/admin-side/js/jquery.select-bootstrap.js"></script>
    <script src="~/admin-side/js/jquery.datatables.js"></script>
    <script src="~/admin-side/js/sweetalert2.js"></script>
    <script src="~/admin-side/js/jasny-bootstrap.min.js"></script>
    <script src="~/admin-side/js/fullcalendar.min.js"></script>
    <script src="~/admin-side/js/jquery.tagsinput.js"></script>
    <script src="~/admin-side/js/material-dashboard.js?v=1.2.1"></script>
    <script src="~/admin-side/js/demo.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            demo.checkFullPageBackgroundImage();
            setTimeout(function () {
                $('.card').removeClass('card-hidden');
            }, 700)
        });
    </script>
    <script src="~/admin-side/js/notify.min.js"></script>
    <script src="~/admin-side/js/notify-metro.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/localization/messages_vi.js"></script>
    <script src="~/admin-side/custom/shared/app.js"></script>
    <script src="~/admin-side/custom/controllers/login/index.js"></script>
    <script>
        var login = new loginController();
        login.initialize();
    </script>
</body>

</html>
