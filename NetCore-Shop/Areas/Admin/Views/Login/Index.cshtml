@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en" class="full-height">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/admin-side/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/admin-side/img/favicon.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewData["Title"]</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/admin-side/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin-side/css/mdb.min.css" rel="stylesheet">
    <link href="~/admin-side/css/style.css" rel="stylesheet">
    <style>
        span.error-validate {
            margin-left: 3rem !important;
            color: white !important;
            border-radius: 2px !important;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
            background-color: #F44336 !important;
            display: inline-block;
            padding: .25em .4em;
            font-size: 75%;
            font-weight: 700;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
        }
    </style>
</head>
<body class="fixed-sn white-skin">

    <!--Main Navigation-->
    <header>
        <!--Intro Section-->
        <section class="view intro-2 hm-stylish-strong">
            <div class="full-bg-img flex-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-6 col-md-10 col-sm-12 mx-auto mt-lg-5">

                            <form id="frmLogin">
                                @Html.AntiForgeryToken()
                                <!--Form with header-->
                                <div class="card wow fadeIn" data-wow-delay="0.3s">
                                    <div class="card-body">

                                        <!--Header-->
                                        <div class="form-header purple-gradient">
                                            <h3><i class="fa fa-user mt-2 mb-2"></i> Log in:</h3>
                                        </div>

                                        <!--Body-->
                                        <div class="md-form">
                                            <i class="fa fa-user prefix white-text"></i>
                                            <label for="orangeForm-name">Your username</label>
                                            <input type="text" id="txtUsername" class="form-control" name="txtUsername">
                                        </div>

                                        <div class="md-form">
                                            <i class="fa fa-lock prefix white-text"></i>
                                            <label for="orangeForm-pass">Your password</label>
                                            <input type="password" id="txtPassword" class="form-control" name="txtPassword">
                                        </div>

                                        <div class="text-center">
                                            <button class="btn purple-gradient btn-lg" id="btnLogin">Login</button>
                                            <hr>
                                            <div class="inline-ul text-center d-flex justify-content-center">
                                                <a class="icons-sm tw-ic"><i class="fa fa-twitter white-text"></i></a>
                                                <a class="icons-sm li-ic"><i class="fa fa-linkedin white-text"> </i></a>
                                                <a class="icons-sm ins-ic"><i class="fa fa-instagram white-text"> </i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--/Form with header-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>
    <!--Main Navigation-->

    <script type="text/javascript" src="~/admin-side/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/admin-side/js/popper.min.js"></script>
    <script type="text/javascript" src="~/admin-side/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/admin-side/js/mdb.min.js"></script>
    <script src="~/admin-side/js/bootbox.min.js"></script>
    <script src="~/admin-side/custom/shared/app.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/localization/messages_vi.js"></script>
    <script src="~/admin-side/custom/shared/app.js"></script>
    <script src="~/admin-side/custom/controllers/login/index.js"></script>
    <script>
        var login = new loginController();
        login.initialize();
    </script>
</body>
</html>